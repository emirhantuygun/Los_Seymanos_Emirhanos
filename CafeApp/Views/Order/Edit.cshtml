@model CafeApp.Models.Order

<form asp-controller="Order" asp-action="Edit" method="post">
    <input type="hidden" asp-for="OrderId">
    <div class="mb-3">
        <label asp-for="TableNo" class="form-label">Table Number</label>
        <input asp-for="TableNo" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label">Customer Name</label>
        <input asp-for="CustomerName" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>